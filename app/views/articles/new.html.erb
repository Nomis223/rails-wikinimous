<h1>Make a new article</h1>

  <%= form_for @articles do |f| %>
    <%= f.label :title, "Enter the title " %>
    <%= f.text_field :title %>
    <%= f.label :content, "And the content" %>
    <%= f.text_field :content %>
    <%= f.submit %>
  <% end %>

<%= link_to "Back to the list", articles_path %>